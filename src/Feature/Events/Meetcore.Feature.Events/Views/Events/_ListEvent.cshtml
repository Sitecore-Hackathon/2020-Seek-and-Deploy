@model Sitecore.Data.Items.Item
@using Meetcore.Feature.Events
@using BasicCompany.Foundation.FieldRendering

@{
    var eventImageOptions = new Sitecore.Resources.Media.MediaUrlOptions
    {
        MaxWidth = 480,
        AllowStretch = false,
    };
}

<a href="@Html.Sitecore().ItemUrl(Model)" class="column product-list-column is-4-desktop is-6-tablet">
    <div class="card">
        <div class="card-image">
            <figure style="background-image: url(@Html.Sitecore().MediaUrl(Templates.Event.Fields.BannerImage, Model, eventImageOptions))"></figure>
        </div>
        <div class="card-content">
            <div class="content">
                <h4>@Html.Sitecore().Field(Templates.Event.Fields.Name, Model)</h4>
                <p>@Html.Sitecore().Field(Templates.Event.Fields.Description, Model)</p>
            </div>
        </div>
    </div>
</a>